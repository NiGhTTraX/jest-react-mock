{
  "name": "jest-react-mock",
  "version": "1.0.1",
  "description": "jest helper for react-mock-component",
  "keywords": [
    "jest",
    "react",
    "mock",
    "tdd",
    "testing",
    "expect"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiGhTTraX/jest-react-mock.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "homepage": "https://github.com/NiGhTTraX/jest-react-mock",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "jest --config tests/jest.config.js --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "peerDependencies": {
    "@types/jest": "^26.0.0",
    "jest": "^26.0.0",
    "react-mock-component": "^2.3.0"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~6.3.0",
    "@tdd-buffet/react": "~1.2.0",
    "@tdd-buffet/tsconfig": "~1.0.0",
    "@tdd-buffet/jest-config": "~2.0.0",
    "@types/jest": "~26.0.0",
    "eslint": "~7.12.0",
    "husky": "~4.3.0",
    "jest": "^26.0.0",
    "lint-staged": "~10.5.0",
    "react": "~17.0.0",
    "react-dom": "~17.0.0",
    "react-mock-component": "^2.3.0",
    "strip-ansi": "~6.0.0",
    "typescript": "~3.9.0"
  }
}
